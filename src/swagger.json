{
  "openapi": "3.0.3",
  "info": {
    "title": "REST API for Swagger Documentation",
    "version": "1.0.0",
    "description": "Cloud storage"
  },
  "servers": [{ "url": "http://localhost:3000/api" }],
  "tags": [{
    "name": "Auth",
    "description": "API for auth in the system"
  },
    {
      "name": "User",
      "description": "API for user in the system"
    }, {
      "name": "File",
      "description": "API for user in the system"
    }],
  "paths": {
    "/auth/registration": {
      "post": {
        "summary": "Created new user in system",
        "tags": [
          "Auth"
        ],
        "security": [],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "required": ["email", "password"],
                "properties": {
                  "email": {
                    "uniqueItems": true,
                    "type": "string"
                  },
                  "password": {
                    "type": "string"
                  }
                }
              }
            }
          }
        },
        "responses": {

        }
      }
    },
    "/auth/login": {
      "post": {
        "tags": [
          "Auth"
        ],
        "summary": "Get auth token for user in system",
        "security": [],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
                "schema": {
                  "type": "object",
                  "required": ["email", "password"],
                  "properties": {
                    "email": {
                      "uniqueItems": true,
                      "type": "string"
                    },
                    "password": {
                      "type": "string"
                    }
                  }
                }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Bearer Access Token",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "token": {
                      "type": "string"
                    }
                  }
                }
              }
            }
          },
          "401": {
            "description": "Auth error",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "message": {
                      "type": "string"
                    }
                  }
                }
              }
            }
          },
          "404": {
            "description": "User not found",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "message": {
                      "type": "string"
                    }
                  }
                }
              }
            }
          },
          "500": {
            "description": "Server error",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "message": {
                      "type": "string"
                    }
                  }
                }
              }
            }
          }
        }
      }
    },
    "/auth": {
      "post": {
        "security": [
          {
            "BearerAuth": []
          }
        ],
        "summary": "Get your current auth by token",
        "tags": ["Auth"],
        "responses": {
          "200": {
            "description": "Here is user which you want to find",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "_id": {
                      "type": "string"
                    },
                    "email": {
                      "type": "string"
                    },
                    "diskStorage": {
                      "type": "number",
                      "default":10737418240
                    },
                    "usedStorage": {
                      "type": "number",
                      "default": 0
                    },
                    "avatar": {
                      "type": "string"
                    },
                    "files": {
                      "type": "array"
                    }
                  }
                }
              }
            }
          },
          "401": {
            "description": "Auth error",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "message": {
                      "type": "string"
                    }
                  }
                }
              }
            }
          },
          "500": {
            "description": "Server error",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "message": {
                      "type": "string"
                    }
                  }
                }
              }
            }
          }
        }
      }
    },
    "/example": {
      "post": {
        "tags": ["ExampleEndpoints"],
        "summary": "Send a text to the server",
        "description": "Send a message to the server and get a response added to the original text.",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/ExampleSchemaHeader"
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "Success",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ExampleSchemaBody"
                }
              }
            }
          },
          "404": { "description": "Not found" },
          "500": { "description": "Internal server error" }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "User": {
        "type": "object",
        "required": ["email", "password"],
        "properties": {
          "_id": {
            "type": "string"
          },
          "email": {
            "type": "string"
          },
          "password": {
            "type": "string"
          },
          "diskStorage": {
            "type": "number"
          },
          "usedStorage": {
            "type": "number"
          },
          "avatar": {
            "type": "string"
          },
          "files": {
            "type": "array",
            "example": "$ref File"
          }
        }
      },
      "File": {
        "type": "object",
        "required": ["name", "type"],
        "properties": {
          "_id": {
            "type": "string"
          },
          "name": {
            "type": "string"
          },
          "type": {
            "type": "string"
          },
          "path": {
            "type": "string"
          },
          "size": {
            "type": "number"
          },
          "user": {
            "type": "string",
            "example":"$ref User"
          },
          "parent": {
            "type": "string",
            "example":"$ref File"
          },
          "children": {
            "type": "string",
            "example":"$ref File"
          }
        }
      },
      "ExampleSchemaBody": {
        "properties": {
          "responseText": {
            "type": "string",
            "example": "This is some example string! This is an endpoint"
          }
        }
      },
      "ExampleSchemaHeader": {
        "required": ["text"],
        "properties": {
          "text": {
            "type": "string",
            "example": "This is some example string!"
          }
        }
      }
    },
    "securitySchemes": {
      "BearerAuth": {
        "type": "http",
        "scheme": "bearer"
      }
    }
  },
  "security": [{
    "BearerAuth": []
  }]
}
